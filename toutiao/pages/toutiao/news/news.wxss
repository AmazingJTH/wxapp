.news-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.news-nav{
  width: 100%;
  margin-top: 2px;
  height: 32px;
  background: #f00;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  color: #ddd;
  font-size:12px;
}
.news-nav ul{
  display: flex;
  width: 90%;
  height: 100%;
  justify-content: space-around;
  align-items: center;
}
.news-nav ul .active{
  font-size: 16px;
  color: #fff;
  font-weight:600;
}
.news-nav p{
  padding: 0 10px;
  font-size: 22px;
}
.news-list{
  flex: 1;
}
.news-list scroll-view{
  height: 100%;
}
.news-list button{
  border: 0!important;
}
.news-list ul{
  height:100%;
  display: flex;
  padding:0 10px;
  flex-direction: column;
}
.news-list navigator{
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}

.news-list ul li b{
  width: 100%;
  font-size: 14px;
  color: #000;
  line-height: 18px;
}
.arrli{
  display: flex;
  flex-direction: column;
}

.imglist{
  width: 100%;
  height: 96px;
  padding: 5px 0;
}
.imglist image{
  width: 32%;
  margin: 0 2px;
  height: 96px;
}
.tips{
  display: flex;
  justify-content: space-between;
}
.tips text{
  font-size: 12px;
  color: #ccc;
}
.oneli{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
}
.oneli image{
  width:33%;
  height: 96px;
  padding-right: 10px;
}
.det{
  width: 75%;
  height: 96px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.det .otips{
  display: flex;
  justify-content: space-between;
}
.otips text{
  font-size: 12px;
  color: #ccc;
}
